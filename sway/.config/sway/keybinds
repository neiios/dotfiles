# move and resize windows with mouse
floating_modifier $mod normal

bindsym --to-code --no-repeat --inhibited {
  # screenshot
  Print exec grim -g "$(slurp)" - | wl-copy --type image/png && wl-paste > ~/Pictures/Screenshots/$(date "+%F-%T").png
  Shift+Print exec grim -g "$(slurp)" - | swappy -f  -

  # media keys
  XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +5%
  XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -5%
  XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle

  # launch apps
  $mod+Return exec $term
  $mod+f exec firefox
  $mod+Shift+d exec flatpak run com.discordapp.Discord
  # discord mute global hotkey (really ugly)
  Num_Lock exec ~/.config/global-hotkey.sh
  $mod+t exec flatpak run org.telegram.desktop
  $mod+e exec thunderbird
  $mod+s exec flatpak run com.valvesoftware.Steam
  $mod+d exec $menu

  # close window
  $mod+q kill

  $bothMods+Shift+c reload
  $bothMods+Shift+e exec swaynag -t warning -m 'You pressed the exit shortcut. Do you really want to exit sway? This will end your Wayland session.' -B 'Yes, exit sway' 'swaymsg exit'

  # change focused window
  $mod+$left focus left
  $mod+$down focus down
  $mod+$up focus up
  $mod+$right focus right
  $mod+Left focus left
  $mod+Down focus down
  $mod+Up focus up
  $mod+Right focus right

  # move the window
  $mod+Shift+$left move left
  $mod+Shift+$down move down
  $mod+Shift+$up move up
  $mod+Shift+$right move right
  $mod+Shift+Left move left
  $mod+Shift+Down move down
  $mod+Shift+Up move up
  $mod+Shift+Right move right

  # main workspaces
  $mod+z workspace 1:z
  $mod+x workspace 2:x
  $mod+c workspace 3:c
  $mod+v workspace 4:v
  $mod+n workspace 5:n
  $mod+m workspace 6:m
  $mod+Comma workspace 7:<
  $mod+Period workspace 8:>

  $mod+Shift+z move container to workspace 1:z
  $mod+Shift+x move container to workspace 2:x
  $mod+Shift+c move container to workspace 3:c
  $mod+Shift+v move container to workspace 4:v
  $mod+Shift+n move container to workspace 5:n
  $mod+Shift+m move container to workspace 6:m
  $mod+Shift+Comma move container to workspace 7:<
  $mod+Shift+Period move container to workspace 8:>

  # additional workspaces
  $mod+9 workspace number 9
  $mod+0 workspace number 10
  $mod+Shift+9 move container to workspace number 9
  $mod+Shift+0 move container to workspace number 10

  # fullscreen and floating
  $bothMods+f fullscreen
  $bothMods+Shift+space floating toggle
  $bothMods+space focus mode_toggle
  $bothMods+a focus parent

  # scratchpad things
  $bothMods+Shift+minus move scratchpad
  $bothMods+minus scratchpad show
}

# floating toggle
bindsym --to-code --no-repeat --inhibited --whole-window $mod+BTN_MIDDLE floating toggle

# resize windows
mode "resize" {
  bindsym $left resize shrink width 10px
  bindsym $down resize grow height 10px
  bindsym $up resize shrink height 10px
  bindsym $right resize grow width 10px
  bindsym Left resize shrink width 10px
  bindsym Down resize grow height 10px
  bindsym Up resize shrink height 10px
  bindsym Right resize grow width 10px
  # return to default mode
  bindsym Return mode "default"
  bindsym Escape mode "default"
}

bindsym $bothMods+r mode "resize"
# vim: ft=swayconfig
