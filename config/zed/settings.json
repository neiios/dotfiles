{
  "restore_on_startup": "none", // buggy integration with direnv
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "assistant": {
    "version": "2",
    "show_hints": false
  },
  "scroll_sensitivity": 3.0,
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false
  },
  "vim_mode": true,
  "relative_line_numbers": true,
  "terminal": {
    "option_as_meta": true,
    "toolbar": {
      "breadcrumbs": false
    }
  },
  "ui_font_size": 17,
  "buffer_font_size": 13,
  "buffer_font_family": "JetBrains Mono",
  "lsp": {
    "nil": {
      "settings": {
        "formatting": {
          "command": ["nixfmt"]
        }
      }
    }
  },
  "languages": {
    "Nix": {
      "language_servers": ["nil", "!nixd"]
    },
    "Python": {
      "language_servers": ["pyright", "ruff"],
      "formatter": [
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ]
    }
  }
}
