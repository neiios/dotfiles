[user]
	email = "igor@sgf.lt"
	name = "Igor"
	signingkey = ~/.ssh/git.pub

[core]
	autocrlf = "false"
	eol = "lf"
[init]
	defaultBranch = "master"
[push]
	autoSetupRemote = true

[gpg]
	format = ssh
[commit]
	gpgsign = true
[tag]
	gpgsign = true

[credential "https://github.com"]
	helper =
	helper = !gh auth git-credential
[credential "https://gist.github.com"]
	helper =
	helper = !gh auth git-credential

[includeIf "gitdir:~/wix/"]
  path = ~/wix/.gitconfig
